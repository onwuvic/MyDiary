{
  "name": "my-diary",
  "version": "1.0.0",
  "description": "Resful API for my-diary application",
  "main": "server.js",
  "scripts": {
    "babel-node": "babel-node --presets=env",
    "dev": "nodemon --exec npm run babel-node server/src/server.js",
    "clean": "rm -rf ./server/build && mkdir ./server/build",
    "build-babel": "babel -d ./server/build ./server/src -s",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./server/build/server.js",
    "lint": "esw server/src --color",
    "lint:fix": "esw server/src/middlewares/canUpdateEntry.js --fix",
    "lint:watch": "npm run lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc mocha --timeout 10000 \"server/src/tests/**/*.spec.js\"",
    "test:watch": "npm run test -- --watch",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "keywords": [
    "express",
    "node",
    "api",
    "js"
  ],
  "author": "Onwuzor Victor",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "bcrypt": "^3.0.0",
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "jsonwebtoken": "^8.3.0",
    "lodash.merge": "^4.6.1",
    "pg-promise": "^8.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-watch": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2"
  },
  "engines": {
    "node": "8.11.1"
  }
}
